<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          

              <div class="container">
                <h1 class="text-center">Welcome <%= user.userName %></h1>
            </div>
            <button onclick="showPopup()" style="width: 100px" class=" btn btn-primary ml-auto">Add Book</button>
        

            <div id="popup" style="display:none" class="popup row">
              <button onclick="hidePopup()" id="closePopup" class="btn p-2">X</button>
              <div  style="background:#fff ;height: max-content;margin-top: 100px;" class=" p-5  container col-5 col-sm-12  col-md-6">
                <h2>ADD A BOOK</h2>
                <form action="/book/addBook" enctype="multipart/form-data" method="POST">
                  <div class="mb-3">
                      <label for="title" class="form-label">Title</label>
                      <input type="text" class="form-control" id="title" name="title">
                  </div>
                  <div class="mb-3">
                    <label for="authors" class="form-label">Author</label>
                    <textarea class="form-control" id="authors" name="authors"></textarea>
                  </div>
                  <div class="mb-3">
                    <label for="imgUpload" class="form-label">Image</label>
                    <input type="file" class="form-control" id="imageUpload" name="file">
                  </div>
                  <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
                </form>
              </div>
            </div>
              
            
          
            </div>

            <div class="flex flex-wrap ">
            
              <% for(var i=0; i<books.length; i++) {%>
                <div class="card m-2" style="width: 18rem;">
                  <img class="card-img-top" src="<%= books[i].image%>" alt="Card image cap">
                  <div class="card-body">
                    <h5 class="card-title"><%= books[i].title%></h5>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                  </div>
                </div>
              <% } %>
            
      
            </div>  
         
        </div>  
      </div>  
    </div>
  </div>
</div>
<script>
  function showPopup(){
    let element=document.getElementById('popup')
    element.style.display='flex'
  }


  function hidePopup(){
    let element=document.getElementById('popup')
    element.style.display='none'
  }
</script>
<%- include('partials/footer') -%>