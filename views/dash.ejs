<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          

              <div class="container">
                <h1 class="text-center">Welcome <%= user.userName %></h1>
    
                    <div class="row mt-3">
                        <div class="col-md-5 mx-auto text-center p-4">
                            <div class="mt-3">
                                <a href="/dashboard" class="btn btn-block btn-info">dash</a>
                            </div>
    
                            <div class="mt-3">
                                <a href="/library" class="btn btn-block btn-info">library</a>
                            </div>
    
                            <div class="mt-3">
                                <a href="/student" class="btn btn-block btn-info">students</a>
                            </div>
    
                            <div class="mt-3">
                                <a href="/settings" class="btn btn-block btn-info">settings</a>
                            </div>
                        </div>
                    </div>
            </div>
              
            
              <div class="mt-5">
                <h2>ADD A BOOK</h2>
                <form action="/book/addBook" enctype="multipart/form-data" method="POST">
                  <div class="mb-3">
                      <label for="title" class="form-label">Title</label>
                      <input type="text" class="form-control" id="title" name="title">
                  </div>
                  <div class="mb-3">
                    <label for="authors" class="form-label">Author</label>
                    <textarea class="form-control" id="authors" name="authors"></textarea>
                  </div>
                  <div class="mb-3">
                    <label for="imgUpload" class="form-label">Image</label>
                    <input type="file" class="form-control" id="imageUpload" name="file">
                  </div>
                  <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
                </form>
              </div>
            </div>
            <div class="col-6">
              <ul class="row list-unstyled">
              <% for(var i=0; i<books.length; i++) {%>
                <li class="col-6 justify-content-between mt-5">
                  <a href="/post/<%= books[i]._id%>">
                    <img class="img-fluid" src="<%= books[i].image%>">
                  </a>
                </li>
              <% } %>
              </ul>
              <div class="row justify-content-center mt-5">
                <a class="btn btn-primary" href="/dash">Return to Dashboard</a>
              </div>  
            </div>  
         
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>